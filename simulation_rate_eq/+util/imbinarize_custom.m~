function binImage= imbinarize_custom(image,threshold)


% #########################################################################
%
% FUNCTION: binImage= imbinarize_custom(image,threshold)
%
% Description: 
%
% Input: 
%
% Output: 
%
% #########################################################################



% convert input image to binary image according to threshold value 

binImage = zeros(size(image,1),size(image,2));

binImage(image >= threshold) = 1;


end
